/* miniprogram/pages/ucenter/index/index.wxss */
.container{
  background: #f4f4f4;
  height: auto;
  overflow: hidden;
  width: 100%;
}
.profile-info {
width: 100%;
height: 220rpx;
display: flex;
flex-wrap: wrap;
align-items: center;
justify-content: flex-start;
padding: 0 30.25rpx;
background: #ccc;
}

.profile-info .avatar {
height: 148rpx;
width: 148rpx;
background: #dcdcdc;
border-radius: 50%;
border: 4rpx solid #fff;
}

.profile-info .info {
flex: 1;
height: 85rpx;
margin-left: 30rpx;
display: flex;
flex-direction: column;
justify-content: center;
}

.profile-info .name {
height: 45rpx;
line-height: 45rpx;
color: #333;
font-size: 40rpx;
font-weight: bold;
}

.profile-info .btn {
width: 70rpx;
height: 70rpx;
margin-right: 50rpx;
border-radius: 50%;
}

.icon{
  margin-right: 16px;
  vertical-align: middle;
  width:30px; 
  height: 30px;
}
.image{
  flex: 1;
  border: 1px solid #fff;
  height: 85rpx;
  width: 100%;
  display: flex;
}
.logout{
  position:fixed;
  bottom: 0rpx;
  height: 101rpx;
  width: 100%;
  line-height: 101rpx;
  text-align: center;
  background: rgb(185, 3, 3);
  color: rgb(248, 239, 239);
  font-size: 38rpx;
  font-weight: bold;
}
.view-haver{
  background: rgb(155, 2, 2);
}

.admin{
  height: 101rpx;
  width: 100%;
  line-height: 101rpx;
  text-align: center;
  background:#ccc;
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
  border: 1px solid #fff;
}

