/* miniprogram/pages/ucenter/applyInfo/applyInfo.wxss */

.container{
  background: #f4f4f4;
  height: auto;
  overflow: hidden;
  width: 100%;
}


  .profile-info {
    width: 100%;
    height: 220rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
    padding: 0 30.25rpx;
    background: #f4f4f4;
    }
    
    .profile-info .avatar {
    height: 148rpx;
    width: 148rpx;
    border-radius: 20%;
    border: 4rpx solid #fff;
    }
    
    .profile-info .info {
    display: flex;
    flex-direction: column;
    height: 100rpx;
    margin-left: 30rpx;
    justify-content: center;
    }
    
    .profile-info .name {
    height: 45rpx;
    line-height: 45rpx;
    color: #333;
    font-weight: bold;
    font-size: 40rpx;
    margin-top:10rpx;
    }
    
    .profile-info .gc {
      display: flex;
      flex-direction: row;
      margin-top:40rpx;
      }
  
      .profile-info .gc .gender{
      color: #333;
      font-weight: bold;
      font-size: 30rpx;
      }
      .profile-info .gc .age{
      margin-left: 40rpx;
      color: #333;
      font-weight: bold;
      font-size: 30rpx;
      }

      .title{
        margin-top: 30rpx;
        font-weight: bold; 
        display: flex;
        flex-direction: column;
      }

      .txt{
        margin-top: 30rpx;
        margin-left:60rpx;
        display: flex;
        flex-direction: column;
      }

      .pic{
        width: 500rpx;
        height: 500rpx;
        margin-top: 30rpx;
        margin-left: 100rpx;
        display: flex;
        flex-direction:column;
        align-items: center;
        border: 4rpx solid #333;
      }
      .pic .image{
        width: 450rpx;
        height: 450rpx;
      }      

      .pic .txt{
        margin-right: 55rpx;
        color: #333;
        font-size: 30rpx;
      }

      .btn{
        margin-top: 80rpx;
        margin-left:150rpx;
      }