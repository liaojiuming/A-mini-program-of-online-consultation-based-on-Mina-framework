<!--miniprogram/pages/ucenter/opinion/opinion.wxml-->
<view class="container">
  <view class="label">请选择反馈类型：</view>
<picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
  <view class="picker">
    <view class="fb-type">
      <view class="type-label">{{array[index]}}</view>
      <image class="type-icon" src="../../../images/xiala.png"></image>
    </view>
  </view>
</picker>
<form bindsubmit="bindFormText">
  <view class="label">请输入您的意见：</view>
  <view class="fb-body">
    <textarea placeholder="对我们的医生、服务、程序您还有什么建议？您还希望我们提供什么服务？请告诉我们..." bindinput="bindInput" name="opinion" maxlength="300"/>
  <view class="weui-textarea-counter">{{textLength}}/300</view>
  </view>
  
  <view class="label">手机号码：</view>
  <input class="mobile" placeholder="方便我们与您联系" name="phone" maxlength="11"/>

  <button class="btn" form-type="submit" type="primary">提交</button>
</form>
</view>
