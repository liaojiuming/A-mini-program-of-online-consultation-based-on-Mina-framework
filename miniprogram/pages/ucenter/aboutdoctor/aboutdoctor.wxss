/* miniprogram/pages/ucenter/aboutdoctor/aboutdoctor.wxss */
.page{
  width: 100%;
  background: #f4f4f4;
}
.container{
  background: #f4f4f4;
  height: auto;
  overflow: hidden;
  width: 100%;
}
.profile-info {
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
  padding: 0 30.25rpx;
  background: #ccc;
  }
  
  .profile-info .avatar {
  height: 148rpx;
  width: 148rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  }
  
  .profile-info .info {
  display: flex;
  flex-direction: column;
  height: 100rpx;
  margin-left: 30rpx;
  justify-content: center;
  }
  
  .profile-info .name {
  height: 45rpx;
  line-height: 45rpx;
  color: #333;
  font-weight: bold;
  font-size: 40rpx;
  }
  
  .profile-info .gc {
    display: flex;
    flex-direction: row;
    margin-top:20rpx;
    }

    .profile-info .gc .gender{
    color: #333;
    font-weight: bold;
    font-size: 30rpx;
    }
    .profile-info .gc .age{
    margin-left: 40rpx;
    color: #333;
    font-weight: bold;
    font-size: 30rpx;
    }

    .fb-body{
      width: 95%;
      height: 340rpx;
      background: #fff;
      padding-left: 30rpx;
      margin-bottom: 20rpx;
      }
      
  
  
  .label{
    background: #f6f6f6;
    height: 30rpx;
    width: 100%;
    padding-top: 3rpx;
    padding-bottom: 11rpx;
    color: #333;
    font-size: 28rpx;
    font-weight: bold;
    padding-left:5rpx;
    line-height: 33rpx;
    }

    .fb-mobile{
      height: 90rpx;
      line-height: 90rpx;
      width: 95%;
      }
      
      .fb-mobile .mobile-box{
      height: 90rpx;
      line-height: 90rpx;
      width: 100%;
      color: #333;
      padding-left: 30rpx;
      padding-top: 30rpx;
      font-size: 30rpx;
      background: #fff;
      position: relative;
      }
      
      .depart{
        margin-top: 90rpx;
      }
    
    .btn{
      margin-top:100rpx;
      width: 100%;
    }