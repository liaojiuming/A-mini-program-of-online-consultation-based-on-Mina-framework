/* miniprogram/pages/doctorInfo/doctorInfo.wxss */
.container{
  background: #f6f6f6;
  height: auto;
  overflow: hidden;
  width: 100%;
}
.profile-info {
  width: 100%;
  height: 270rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
  padding: 0 30.25rpx;
  background: #ccc;
  }
  
  .profile-info .avatar {
  height: 148rpx;
  width: 148rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  }
  
  .profile-info .info {
  display: flex;
  flex-direction: column;
  height: 100rpx;
  margin-left: 30rpx;
  justify-content: center;
  }
  
  .profile-info .name {
  height: 45rpx;
  line-height: 45rpx;
  color: #333;
  font-weight: bold;
  font-size: 40rpx;
  }
  
  .profile-info .gc {
    display: flex;
    flex-direction: row;
    margin-top:20rpx;
    }

    .profile-info .gc .gender{
    color: #333;
    font-weight: bold;
    font-size: 28rpx;
    }
    .profile-info .gc .age{
    margin-left: 40rpx;
    color: #333;
    font-weight: bold;
    font-size: 28rpx;
    }
    .hospital{
      display: flex;
      margin-top: 20rpx;
      color: #333;
      font-weight: bold;
      font-size: 28rpx;
      }

    .star{
      position: fixed;
      right: 40rpx;
      top: 50rpx;
      width: 70px;
      height: 35px;
      border-radius: 50%;
    }
    .lable{    
      margin-top: 35rpx;
      margin-left: 30rpx;
      width: 100%;
      color: #333;
      font-size: 32rpx;
      font-weight: bold;
      display:flex;
      flex-direction:column;
      }

      .text{
        margin-left: 90rpx;
        margin-right: 30rpx;
        color: #333;
        font-size: 32rpx;
      }

      .aboutdoctor{
        margin-top: 30rpx;
        font-size: 38rpx;
      }
      .chart{
        position:fixed;
        bottom: 0rpx;
        height: 101rpx;
        width: 100%;
        line-height: 101rpx;
        text-align: center;
        background: #09bb07;
        color: rgb(248, 239, 239);
        font-size: 38rpx;
        font-weight: bold;
      }
      .view-hover{
        background: #069104;
      }
